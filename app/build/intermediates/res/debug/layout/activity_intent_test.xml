<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal|left">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳转搜索"
            android:layout_weight="1"
            android:id="@+id/btn_intent_search"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳转详情"
            android:layout_weight="1"
            android:id="@+id/btn_intent_details"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳转游戏"
            android:layout_weight="1"
            android:id="@+id/btn_intent_game"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal|left">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳转更新"
            android:layout_weight="1"
            android:id="@+id/btn_intent_update"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳转安全"
            android:layout_weight="1"
            android:id="@+id/btn_intent_security"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳当面传"
            android:layout_weight="1"
            android:id="@+id/btn_intent_nfc"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal|left">


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_tac_test"
            android:singleLine="true"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_go_tac"
            android:text="Go"/>
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/diskzhou/Develop/WorkSpace/TestingTool/TestingTool/app/src/main/res/layout/activity_intent_test.xml -->